<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="163dp"
            android:layout_height="115dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:gravity="center_vertical"
            android:text="이메일로 시작하기"
            android:textColor="#4472C4"
            android:textSize="35dp"
            android:textStyle="bold"
            android:fontFamily="@font/hangeulnurib"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/NameEditText"
                android:layout_width="350dp"
                android:layout_gravity="center"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="이메일"
                android:textSize="20dp"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/hangeulnurib"/>/>

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="350dp"
                android:layout_gravity="center"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:ems="10"
                android:hint="비밀번호"
                android:textSize="20dp"
                android:inputType="textPassword"
                android:fontFamily="@font/hangeulnurib"/>/>

            <Button
                android:id="@+id/CheckButton"
                android:layout_width="360dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/button_selector"
                android:layout_marginTop="10dp"
                android:text="로그인"
                android:textColor="@android:color/background_light"
                android:textSize="21dp"
                android:textStyle="normal"
                android:fontFamily="@font/hangeulnurib"/>/>

            <Button
                android:id="@+id/signUp_Activity_Button"
                android:layout_width="360dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="회원가입"
                android:background="@drawable/button_selector"
                android:layout_marginTop="10dp"
                android:textSize="21dp"
                android:textColor="@android:color/background_light"
                android:textStyle="normal"
                android:fontFamily="@font/hangeulnurib"/>/>

            <Button
                android:id="@+id/gotoPasswordResetbutton"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="비밀번호 찾기"
                android:background="#00ff0000"
                android:fontFamily="@font/hangeulnurib"/>/>

        </LinearLayout>

    </LinearLayout>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/activity_login_googlesignInButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"/>


    <com.facebook.login.widget.LoginButton
        android:id="@+id/activity_login_facebookloginbutton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"/>



    <!--    <Button
            android:id="@+id/activity_login_customkakaologin"
            android:layout_width="360dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:layout_marginTop="10dp"
            android:text="카카오톡으로 로그인"
            android:textColor="@android:color/background_light"
            android:textSize="21dp"
            android:textStyle="normal" />-->
