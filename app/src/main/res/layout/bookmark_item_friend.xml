<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/frienditem_imageview"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_friend_RankImage"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_gravity="top"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/medal3"
        android:layout_marginBottom="3dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/frienditem_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@id/frienditem_imageview"
        android:layout_toRightOf="@id/frienditem_imageview"
        android:text="닉네임"
        android:textSize="16dp"
        android:textStyle="bold"
        android:fontFamily="@font/nanumbarungothic"
        app:layout_constraintLeft_toRightOf="@+id/frienditem_imageview"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/frienditem_region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/frienditem_imageview"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/frienditem_imageview"
        android:text="지역"
        android:textSize="13dp"
        android:fontFamily="@font/nanumbarungothic"
        app:layout_constraintLeft_toRightOf="@+id/frienditem_imageview"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/frienditem_hash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/frienditem_imageview"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@id/frienditem_imageview"
        android:text="해시태그"
        android:textColor="#E91E63"
        android:textSize="13dp"
        android:fontFamily="@font/nanumbarungothic"
        app:layout_constraintLeft_toRightOf="@+id/frienditem_imageview"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/frienditem_DeleteButton"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/button_selector"
        android:text="삭제"
        android:textColor="@android:color/background_light"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/nanumbarungothic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E3E0E0"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frienditem_imageview">
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>