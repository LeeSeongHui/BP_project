<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    android:background="?attr/selectableItemBackground"
    android:id="@+id/fragment_people_itemLayout">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/frienditem_imageview"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="18dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/user"
            android:layout_marginBottom="3dp"/>

        <ImageView
            android:id="@+id/item_friend_RankImage"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_gravity="top"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/medal3"
            android:layout_marginBottom="3dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="3dp">

            <TextView
                android:id="@+id/frienditem_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/frienditem_imageview"
                android:layout_toRightOf="@id/frienditem_imageview"
                android:text="닉네임"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/frienditem_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/frienditem_imageview"
                android:layout_marginTop="5dp"
                android:layout_marginRight="17dp"
                android:layout_toRightOf="@id/frienditem_imageview"
                android:text="지역"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/frienditem_hash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/frienditem_imageview"
                android:layout_marginTop="5dp"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@id/frienditem_imageview"
                android:text="해시태그"
                android:textColor="#E91E63"
                android:textSize="13dp" />
        </LinearLayout>

        <Button
            android:id="@+id/frienditem_DeleteButton"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/button_selector"
            android:text="삭제"
            android:textColor="@android:color/background_light"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginLeft="340dp"/>

    </FrameLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray">
    </LinearLayout>

</LinearLayout>