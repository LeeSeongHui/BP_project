<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:background="?attr/selectableItemBackground"
    android:id="@+id/fragment_people_itemLayout">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/frienditem_imageview"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="18dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/user"
            android:layout_marginBottom="3dp"/>

        <ImageView
            android:id="@+id/item_friend_RankImage"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_gravity="top"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/medal3"
            android:layout_marginBottom="3dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="3dp">

            <TextView
                android:id="@+id/frienditem_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/frienditem_imageview"
                android:layout_toRightOf="@id/frienditem_imageview"
                android:text="닉네임"
                android:textSize="16dp"
                android:textStyle="bold"
                android:fontFamily="@font/hangeulnurib"/>

            <TextView
                android:id="@+id/frienditem_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/frienditem_imageview"
                android:layout_marginTop="5dp"
                android:layout_marginRight="17dp"
                android:layout_toRightOf="@id/frienditem_imageview"
                android:text="지역"
                android:textSize="13dp"
                android:fontFamily="@font/hangeulnurib"/>

            <TextView
                android:id="@+id/frienditem_hash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/frienditem_imageview"
                android:layout_marginTop="5dp"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@id/frienditem_imageview"
                android:text="해시태그"
                android:textColor="#E91E63"
                android:textSize="13dp"
                android:fontFamily="@font/hangeulnurib"/>
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E3E0E0">
    </LinearLayout>

</LinearLayout>