<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearlayout_main">

    <LinearLayout
        android:id="@+id/linearlayout_destination"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile_Image"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:src="@drawable/user" />

        <TextView

            android:id="@+id/TextView_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:fontFamily="@font/nanumbarungothic"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp">

        <!--        <TextView
                    android:id="@+id/TextView_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>-->
        <ImageView
            android:id="@+id/message_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="2.5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/messageItem_textview_readCounter_left"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="9dp"
                android:layout_margin="2dp"
                android:text="1"
                android:visibility="invisible"
                android:fontFamily="@font/nanumbarungothic"/>
            <TextView
                android:text="2011.11.11 11:11"
                android:textSize="9dp"
                android:textColor="@android:color/darker_gray"
                android:id="@+id/textview_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumbarungothic"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/messageItem_textview_readCounter_right"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="9dp"
                android:layout_margin="2dp"
                android:visibility="invisible"
                android:fontFamily="@font/nanumbarungothic"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>