<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout7"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/reviewImage"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="14dp"
        android:scaleType="fitStart"
        android:src="@drawable/user"
        app:layout_constraintBottom_toTopOf="@+id/list_name_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/list_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:fontFamily="@font/nanumbarungothic"
        android:gravity="center"
        android:text="닉네임"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/reviewImage"
        app:layout_constraintTop_toBottomOf="@+id/reviewImage"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"/>

    <RatingBar
        android:id="@+id/list_ratingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="267dp"
        android:isIndicator="true"
        android:numStars="5"
        android:progressBackgroundTint="@color/quantum_grey"
        android:progressTint="@color/Gold"
        android:secondaryProgressTint="@color/quantum_grey"
        app:layout_constraintBottom_toTopOf="@+id/reviewText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/reviewImage"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/reviewText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="69dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/nanumbarungothic"
        android:gravity="center"
        android:text="여행자 후기 업데이트"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/list_name_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintTop_toBottomOf="@+id/list_ratingBar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E3E0E0"
        app:layout_constraintTop_toBottomOf="@+id/list_name_tv"
        android:layout_marginTop="5dp">
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>