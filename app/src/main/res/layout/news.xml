<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/hangeulnurib"
            android:layout_marginStart="15dp"
            android:gravity="center_vertical"
            android:text="BluePeople"
            android:textColor="#0070C0"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="296dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/hangeulnurib"
            android:gravity="center_vertical"
            android:text="in Busan"
            android:textColor="#0070C0"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/textView1"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/image_slide_cardview">

            <ViewFlipper
                android:id="@+id/image_slide"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/gray_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/image_slide_cardview"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"
            app:layout_goneMarginTop="10dp"/>

        <Button
            android:id="@+id/date_course"
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:background="@drawable/hash_button1"
            app:layout_constraintTop_toBottomOf="@id/gray_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/alone_travel"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-10dp"
            android:layout_weight="1"
            android:fontFamily="@font/nanumbarungothic"
            android:text="데이트코스"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/date_course"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/textView6"/>

        <Button
            android:id="@+id/alone_travel"
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:background="@drawable/hash_button2"
            app:layout_constraintTop_toBottomOf="@id/gray_line"
            app:layout_constraintLeft_toRightOf="@+id/date_course"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/date_course"
            app:layout_constraintEnd_toStartOf="@+id/activity_course"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-10dp"
            android:layout_weight="1"
            android:fontFamily="@font/nanumbarungothic"
            android:text="나홀로여행"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/alone_travel"
            app:layout_constraintLeft_toRightOf="@+id/textView5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintEnd_toStartOf="@+id/textView7"/>

        <Button
            android:id="@+id/activity_course"
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:background="@drawable/hash_button3"
            app:layout_constraintTop_toBottomOf="@id/gray_line"
            app:layout_constraintLeft_toRightOf="@+id/alone_travel"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/alone_travel"
            app:layout_constraintEnd_toStartOf="@+id/gastro_venture"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-10dp"
            android:layout_weight="1"
            android:fontFamily="@font/nanumbarungothic"
            android:text="액티비티"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/activity_course"
            app:layout_constraintLeft_toRightOf="@+id/textView6"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintEnd_toStartOf="@+id/textView8"/>

        <Button
            android:id="@+id/gastro_venture"
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/hash_button4"
            app:layout_constraintTop_toBottomOf="@id/gray_line"
            app:layout_constraintLeft_toRightOf="@+id/activity_course"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/activity_course"
            app:layout_constraintEnd_toStartOf="@+id/shopping"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-10dp"
            android:layout_weight="1"
            android:fontFamily="@font/nanumbarungothic"
            android:text="맛집탐방"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/gastro_venture"
            app:layout_constraintLeft_toRightOf="@+id/textView7"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintEnd_toStartOf="@+id/textView9"/>

        <Button
            android:id="@+id/shopping"
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:background="@drawable/hash_button5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toRightOf="@+id/gastro_venture"
            app:layout_constraintStart_toEndOf="@+id/gastro_venture"
            app:layout_constraintTop_toBottomOf="@id/gray_line"
            app:layout_constraintEnd_toStartOf="@+id/cultural_life"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-10dp"
            android:layout_weight="1"
            android:fontFamily="@font/nanumbarungothic"
            android:text="쇼핑센터"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/shopping"
            app:layout_constraintLeft_toRightOf="@+id/textView8"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintEnd_toStartOf="@+id/textView10"
            />

        <Button
            android:id="@+id/cultural_life"
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:background="@drawable/hash_button6"
            app:layout_constraintTop_toBottomOf="@id/gray_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/shopping"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-10dp"
            android:layout_weight="1"
            android:fontFamily="@font/nanumbarungothic"
            android:text="문화생활"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/cultural_life"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView9"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/news_recyclerview"
            android:layout_width="fill_parent"
            android:fontFamily="@font/nanumbarungothic"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/txt_search"
            app:layout_constraintTop_toBottomOf="@id/textView10"
            app:layout_constraintStart_toStartOf="parent">
        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/gray_line2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="0dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/news_recyclerview"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:src="@drawable/bannerimage2"
            app:layout_constraintTop_toBottomOf="@id/gray_line2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>