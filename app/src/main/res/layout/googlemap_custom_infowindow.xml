<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/border">

    <TextView
        android:id="@+id/googlemap_custom_infowindow_PlaceName_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:fontFamily="@font/hangeulnurib"
        android:text="장소 이름"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:orientation="horizontal">

       <!-- <ImageView
            android:id="@+id/googlemap_custom_infowindow_PlaceImage_ImageView"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/travel"/>-->


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical">


            <TextView
                android:id="@+id/googlemap_custom_infowindow_PlaceAdress_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:fontFamily="@font/hangeulnurib"
                android:text="장소 주소"/>

            <TextView
                android:id="@+id/googlemap_custom_infowindow_Content_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#4472C4"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:fontFamily="@font/hangeulnurib"


                android:text="소개 내용"/>




        </LinearLayout>



    </LinearLayout>






</LinearLayout>