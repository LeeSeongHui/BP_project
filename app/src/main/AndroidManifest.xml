<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.native_code.bp_project02">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/loding_icons"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/loding_icons_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.native_code.bp_project02.Feedback"></activity>
        <activity android:name="com.native_code.bp_project02.ReviewActivity" />
        <activity android:name="com.native_code.bp_project02.InfoWindow_Edit" />
        <activity android:name="com.native_code.bp_project02.Chat.GoogleMapActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyA7YlrC4J7fuD4VCTkCNgoQzg8zTVJytsg" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"
            tools:replace="android:value" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>
        <activity android:name="com.native_code.bp_project02.BookmarkActivity" />
        <activity android:name="com.native_code.bp_project02.MemberTypeActivity" />
        <activity android:name="com.native_code.bp_project02.Chat.MessageActivity" />
        <activity android:name="com.native_code.bp_project02.MainActivity" />
        <activity android:name="com.native_code.bp_project02.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.native_code.bp_project02.LoginActivity" />
        <activity android:name="com.native_code.bp_project02.Sign_UpActivity" />
        <activity android:name="com.native_code.bp_project02.PasswordResetActivity" />
        <activity android:name="com.native_code.bp_project02.MemberActivity" />
        <activity android:name="com.native_code.bp_project02.Native_Register" />
        <activity android:name="com.native_code.bp_project02.Native_Profile.Profile" />
        <activity android:name="com.native_code.bp_project02.NativeSearch" />
        <activity android:name="com.native_code.bp_project02.Traveler_Chat_Management" />
        <activity android:name="com.native_code.bp_project02.Native_Chat_Management" />
        <activity android:name="com.native_code.bp_project02.Native_Profile_Management.profile_edit" />

        <service
            android:name="com.native_code.bp_project02.Chat.FirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>